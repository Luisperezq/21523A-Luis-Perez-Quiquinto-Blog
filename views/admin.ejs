<%-include('partials/header')  %>
<%-include('partials/navbar')  %>


    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <form action="#" id="form-guardar">
                    <div class="mb-3">
                        Título del Post
                        <input type="text" id="titulo-post" class="form-control" placeholder="Inserte el título">
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-floating">
                            <textarea id="detalle-post" class="form-control" placeholder="Ingrese detalle" id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Descripción</label>
                          </div>
                    </div>

                    <div class="mb-3">
                        Fecha de Publicación
                        <input type="date" name="" id="fecha">
                    </div>

                    <div class="mb-3">
                        Inserte imagen
                        <input type="text" id="url-img" class="form-control" placeholder="Url imagen">
                    </div>
                    <div class="mb-3">
                        Firma de Autor
                        <input type="text" id="firma_autor" class="form-control" placeholder="Nombre">
                    </div>
                    <button type="submit" id="btn-guardar" class="btn btn-primary">
                        Crear Publicación
                    </button>
                  </form>
            </div>
        </div>
    </div>


    <script src="/js/admin.js"></script>

<%-include('partials/footer')  %>